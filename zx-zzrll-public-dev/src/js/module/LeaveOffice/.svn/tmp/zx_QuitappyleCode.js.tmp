//校验证件号开始
function isCardNo(cardPhone) {
	var pattern=/^[a-zA-Z0-9\u4e00-\u9fa5]{6,21}$/;
	if(cardPhone.length==15||cardPhone.length==18){
		if(checkID(cardPhone)){
			return true;
		}
		else{
			return false;
		}
	}
	else{
		return pattern.test(cardPhone);
	}
	
}
