//校验手机号开始
function checkPhoneNumber(phoneNumber){
	var reg = /^(((13[0-9]{1})|(15[0-9]{1})|(17[0-9]{1})|(18[0-9]{1}))+\d{8})$/; //手机号码的正则表达式
	return reg.test(phoneNumber);
}
